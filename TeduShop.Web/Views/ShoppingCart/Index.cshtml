<script id="tplCart" type="x-tmpl-mustache">
    <div class="content ">
        <div class="view-cart__product">
            <div class="row">
                <div class="col-md-6 col-sm-3 col-xs-3">
                    <div class="img-product">
                        <img src="{{Image}}" alt="Name your Product ">
                    </div>
                    <div class="sub__product">
                        <p class="product__name">
                            {{ProductName}}
                        </p>
                        <div class="product__price hidden-pc">
                            <div class="product__price__regular">{{PriceF}} <span class="unit">đ</span></div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-2 col-xs-2 col-quanlity">
                    <div class="product__quantity">
                        <button class="btn-minus btn">
                            -
                        </button>
                        <input class="input-number txtQuantity" data-id="{{ProductId}}" data-price="{{Price}}" value="{{Quantity}}" type="text">
                        <button class="btn-plus btn">
                            +
                        </button>
                        <div class="clearfix"></div>
                    </div>
                </div>
                <div class="col-md-2 col-sm-3 col-xs-3 hidden-mb">
                    <div class="product__price">
                        <div class="product__price__regular" id="amount_{{ProductId}}">{{Amount}}<span class="unit">đ</span></div>

                    </div>
                </div>
                <div class="col-md-1 col-sm-1 col-xs-1 col-trash-pr">
                    <a href="" class="btn-delete btnDeleteItem" data-id="{{ProductId}}"><span class="icon -ap icon-trash2"></span></a>
                </div>
            </div>
        </div>
        <!--/-->
    </div>
</script>

