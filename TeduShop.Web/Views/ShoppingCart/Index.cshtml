        <div class="sub-name-step" style="font-size: 25px">Giỏ hàng của tôi</div>
        <div class="row">
            <div class="sec__shopcart__info col-md-8 col-sm-12 col-xs-12">
                <div class="box-user__info panel">
                    <div class="content-info-check">
                        <div class="table-product">
                            <div class="title">
                                <div class="row">
                                    <div class="col-md-6 col-sm-4 col-xs-4">
                                        <span class="">Thong tin Sản phẩm</span>
                                    </div>
                                    <div class="col-md-3 col-sm-4 col-xs-4">
                                        <span class="">Số lượng</span>
                                    </div>
                                    <div class="col-md-3 col-sm-4 col-xs-4">
                                        <span class="textr">Thành tiền</span>
                                    </div>
                                </div>
                            </div>
                            <div class="content " id="cartBody"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-12 col-xs-12 col-price-total">
                <div class="name-top__step">Thông tin đơn hàng</div>
                <div class="">

                    <div class="price-total">
                        <div class="pull-left">Thành tiền :</div>
                        <div class="pull-right"> <span id="lblTotalOrder"></span></div>
                    </div>
                </div>
                <div class="mt-4">
                    <div class="row col-md-12">
                        <button class="btn btn-success col-md-6 " id="btnContinue">Tiếp tục mua hàng</button>
                        @* <button class="btn btn-danger  col-md-4 ml-2" id="btnDeleteAll">Xóa giỏ hàng</button> *@
                        <button class="btn btn-danger  col-md-5" style="margin-left: 5px" id="btnCheckout">Thanh toán</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="container">
        <div class="sec__shopcart__info col-md-12 col-sm-12 col-xs-12" id="divCheckout" style="display:none;">
            <div class="box-user__info panel">
                <div class="title">Thông tin thanh toán và nhận hàng</div>
                <div class="content">
                    <form method="post" id="frmPayment">
                        <div class="row">
                            @if (Request.IsAuthenticated)
                            {
                                <label>
                                    <input type="checkbox" id="chkUserLoginInfo" />
                                    Sử dụng thông tin đăng nhập
                                </label>
                            }
                            <div class="col-md-6 col-xs-12 col-sm-6">
                                <div class="form-group">
                                    <div class="label">Số điện thoại:</div>
                                    <input type="text" class="form-control" id="txtPhone" name="phone" placeholder="SĐT">
                                </div>
                            </div>
                            <div class="col-md-6 col-xs-12 col-sm-6">
                                <div class="form-group">
                                    <div class="label">Họ tên:</div>
                                    <input type="text" class="form-control" id="txtName" name="name" placeholder="Tên">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="label">Email</div>
                            <input type="text" class="form-control" id="txtEmail" name="email" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <div class="label">Địa chỉ:</div>
                            <input type="text" class="form-control" id="txtAddress" name="address" placeholder="Địa chỉ">
                        </div>

                        <div class="form-group">
                            <div class="label">Ghi chú:</div>
                            <textarea name="" cols="30" rows="10" class="form-control" id="txtMessage" placeholder="Nội dung"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-danger  col-md-4 col-sm-4 col-md-offset-4" id="btnCreateOrder">Thanh toán</button>
                        </div>
                        <div class="clearfix"></div>
                    </form>
                </div>
            </div>
        </div>

    </div>



